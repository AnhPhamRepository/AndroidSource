<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context=".VehicleDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.HiNeighBor.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background"
            app:popupTheme="@style/Theme.HiNeighBor.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/bannerAdsContainer">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"/>
                <TextView
                    android:id="@+id/txt_properties"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/properties"
                    android:layout_below="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/ll_properties"
                    android:layout_below="@+id/txt_properties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_property1"
                            android:textSize="14sp"
                            android:text="@string/hp"
                            android:layout_below="@+id/txt_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                            android:id="@+id/pb_property1"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            app:rcTextPositionPriority="outside"
                            app:rcTextProgressSize="9sp"
                            android:layout_height="12dp"
                            app:rcBackgroundColor="@color/property_background"
                            app:rcBackgroundPadding="2dp"
                            app:rcMax="10"
                            app:rcAnimationEnable="true"
                            app:rcAnimationSpeedScale="3"
                            app:rcProgressColor="@color/property_process"
                            app:rcRadius="5dp"/>
                        <TextView
                            android:id="@+id/txt_property2"
                            android:layout_marginTop="5dp"
                            android:textSize="14sp"
                            android:text="@string/acceleration"
                            android:layout_below="@+id/txt_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                            android:id="@+id/pb_property2"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            app:rcTextPositionPriority="outside"
                            app:rcTextProgressSize="9sp"
                            android:layout_height="12dp"
                            app:rcBackgroundColor="@color/property_background"
                            app:rcBackgroundPadding="2dp"
                            app:rcMax="200"
                            app:rcAnimationEnable="true"
                            app:rcAnimationSpeedScale="3"
                            app:rcProgressColor="@color/property_process"
                            app:rcRadius="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_property3"
                            android:textSize="14sp"
                            android:text="@string/control"
                            android:layout_below="@+id/txt_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                            android:id="@+id/pb_property3"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            app:rcTextPositionPriority="outside"
                            app:rcTextProgressSize="9sp"
                            android:layout_height="12dp"
                            app:rcBackgroundColor="@color/property_background"
                            app:rcBackgroundPadding="2dp"
                            app:rcMax="2000"
                            app:rcAnimationEnable="true"
                            app:rcAnimationSpeedScale="3"
                            app:rcProgressColor="@color/property_process"
                            app:rcRadius="5dp"/>
                        <TextView
                            android:id="@+id/txt_property4"
                            android:layout_marginTop="5dp"
                            android:textSize="14sp"
                            android:text="@string/speed"
                            android:layout_below="@+id/txt_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                            android:id="@+id/pb_property4"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            app:rcTextPositionPriority="outside"
                            app:rcTextProgressSize="9sp"
                            android:layout_height="12dp"
                            app:rcBackgroundColor="@color/property_background"
                            app:rcBackgroundPadding="2dp"
                            app:rcMax="10"
                            app:rcAnimationEnable="true"
                            app:rcAnimationSpeedScale="3"
                            app:rcProgressColor="@color/property_process"
                            app:rcRadius="5dp"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/txt_info"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-light"
                    android:textSize="18sp"
                    android:gravity="left"
                    android:layout_below="@+id/ll_properties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/bannerAdsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:id="@+id/banner_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.appnext.banners.BannerView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                ads:bannerSize="BANNER"/>
            <com.startapp.sdk.ads.banner.Banner
                android:id="@+id/startAppBanner"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/bottomBanner"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.mopub.mobileads.MoPubView
                android:id="@+id/mopBanner"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:moPubAdSize="match_view"></com.mopub.mobileads.MoPubView>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>