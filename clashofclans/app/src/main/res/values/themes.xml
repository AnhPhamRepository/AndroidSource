<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HiNeighBor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:colorPrimaryDark" >@color/background</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/UrbanTextViewStyle</item>
        <item name="buttonStyle">@style/UrbanButtonStyle</item>
    </style>

    <style name="Theme.HiNeighBor.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HiNeighBor.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HiNeighBor.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="UrbanTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/pubg</item>
        <item name="android:textColor">@color/main</item>
    </style>

    <style name="UrbanButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/pubg</item>
        <item name="android:textColor">@color/main</item>
    </style>
</resources>