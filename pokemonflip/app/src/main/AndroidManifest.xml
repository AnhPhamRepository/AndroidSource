<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pokemonflip">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gamemini">
        <activity android:name="com.example.pokemonflip.LoaderActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.pokemonflip.stage3Activity"
            android:screenOrientation="landscape"/>
        <activity android:name="com.example.pokemonflip.stage2Activity"
            android:screenOrientation="landscape"/>
        <activity android:name="com.example.pokemonflip.GameWinActivity"
            android:screenOrientation="landscape"/>
        <activity android:name="com.example.pokemonflip.GameOverActivity"
            android:screenOrientation="landscape"/>
        <activity android:name="com.example.pokemonflip.MainActivity"
            android:screenOrientation="landscape">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->

<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>
        <service android:name=".BackgroundSoundService" />
    </application>

</manifest>